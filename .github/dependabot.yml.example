version: 2
updates:
  # ── GitHub Actions ──────────────────────────────────────────────────────────
  # Keeps workflow action versions current.
  # Commit prefix "ci" matches cog.toml [commit_types].ci
  - package-ecosystem: github-actions
    directory: /
    schedule:
      interval: weekly
      day: monday
      time: "08:30"
      timezone: Asia/Kuala_Lumpur
    commit-message:
      prefix: "ci"
    labels:
      - "dependencies"
      - "ci"
    groups:
      github-actions:
        patterns: ["*"]
    ignore:
      # Don't auto-bump major versions of Actions — review breaking changes manually
      - dependency-name: "*"
        update-types: ["version-update:semver-major"]

  # ── Cargo workspace root ─────────────────────────────────────────────────────
  # Monitors [workspace.dependencies] in the root Cargo.toml.
  # Prefix "chore" matches cog.toml [commit_types].chore (no version bump)
  - package-ecosystem: cargo
    directory: /
    schedule:
      interval: weekly
      day: monday
      time: "09:00"
      timezone: Asia/Kuala_Lumpur
    commit-message:
      prefix: "chore(deps)"
    labels:
      - "dependencies"
      - "rust"
    groups:
      workspace-deps:
        patterns: ["*"]
    ignore:
      - dependency-name: "*"
        update-types: ["version-update:semver-major"]

  # ── scarff-core ──────────────────────────────────────────────────────────────
  - package-ecosystem: cargo
    directory: /crates/scarff-core
    schedule:
      interval: weekly
      day: monday
      time: "09:10"
      timezone: Asia/Kuala_Lumpur
    commit-message:
      prefix: "chore(core)"
    labels:
      - "dependencies"
      - "scarff-core"
    groups:
      core-deps:
        patterns: ["*"]
    ignore:
      - dependency-name: "*"
        update-types: ["version-update:semver-major"]

  # ── scarff-adapters ──────────────────────────────────────────────────────────
  - package-ecosystem: cargo
    directory: /crates/scarff-adapters
    schedule:
      interval: weekly
      day: monday
      time: "09:20"
      timezone: Asia/Kuala_Lumpur
    commit-message:
      prefix: "chore(adapters)"
    labels:
      - "dependencies"
      - "scarff-adapters"
    groups:
      adapters-deps:
        patterns: ["*"]
    ignore:
      - dependency-name: "*"
        update-types: ["version-update:semver-major"]

  # ── scarff-cli ───────────────────────────────────────────────────────────────
  - package-ecosystem: cargo
    directory: /crates/scarff-cli
    schedule:
      interval: weekly
      day: monday
      time: "09:30"
      timezone: Asia/Kuala_Lumpur
    commit-message:
      prefix: "chore(cli)"
    labels:
      - "dependencies"
      - "scarff-cli"
    groups:
      cli-deps:
        patterns: ["*"]
    ignore:
      - dependency-name: "*"
        update-types: ["version-update:semver-major"]
